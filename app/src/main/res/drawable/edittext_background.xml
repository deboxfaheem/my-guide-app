<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray"/>
            <corners
                android:bottomRightRadius="@dimen/dimen_3dp"
                android:bottomLeftRadius="@dimen/dimen_3dp">
            </corners>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners
                android:bottomRightRadius="@dimen/dimen_3dp"
                android:bottomLeftRadius="@dimen/dimen_3dp">
            </corners>
        </shape>
    </item>
</layer-list>